# ==================== SERVICE PORTS ====================
# All services are configured via environment variables for easy deployment
# Change these values based on your deployment environment (local, staging, production)

# Express Backend Server
BACKEND_PORT=4000
BACKEND_HOST=0.0.0.0

# TUS (Resumable Upload) Server
TUS_PORT=4001
TUS_HOST=0.0.0.0
TUS_PATH=/files

# PDF to HTML Conversion Service
PDF_CONVERTER_PORT=5002
PDF_CONVERTER_HOST=0.0.0.0

# Python Manager (Document Processing Hub)
PYTHON_MANAGER_PORT=5050
PYTHON_MANAGER_HOST=0.0.0.0

# Converter Module
CONVERTER_MODULE_PORT=5001
CONVERTER_MODULE_URL=http://localhost:5001

# Reductor V2 (PII Removal)
REDUCTOR_V2_PORT=5017
REDUCTOR_V2_URL=http://localhost:5017
REDUCTOR_V2_MODULE_URL=http://localhost:5017

# Reductor V3 (PII Removal - Latest)
REDUCTOR_V3_PORT=5018
REDUCTOR_V3_URL=http://localhost:5018
REDUCTOR_V3_MODULE_URL=http://localhost:5018

# AI Content Detector
AI_DETECTOR_PORT=5003
AI_DETECTOR_URL=http://localhost:5003
AI_DETECTOR_MODULE_URL=http://localhost:5003

# Humanizer Service
HUMANIZER_PORT=8000
HUMANIZER_URL=http://localhost:8000
HUMANIZER_MODULE_URL=http://localhost:8000
HUMANIZER_API_URL=http://localhost:8000

# Frontend (Next.js)
FRONTEND_PORT=3000

# ==================== DATABASE ====================
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=wedocs
DB_PORT=5432
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/wedocs

# ==================== MINIO (S3 Storage) ====================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_BUCKET=wedocs
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# ==================== ONLYOFFICE ====================
ONLYOFFICE_PORT=8080
ONLYOFFICE_URL=http://localhost:8080

# ==================== HUMANIZER SETTINGS ====================
HUMANIZER_LOG_LEVEL=INFO
HUMANIZER_P_SYN_HIGH=0.50
HUMANIZER_P_TRANS_HIGH=0.28
HUMANIZER_P_SYN_LOW=0.30
HUMANIZER_P_TRANS_LOW=0.16
HUMANIZER_MAX_LEN_DELTA=0.40
HUMANIZER_SIMILARITY_MAX=0.55
HUMANIZER_ATTEMPTS=14

# ==================== REDUCTOR ====================
REDUCTOR_LOG_LEVEL=INFO
REDUCTOR_MAX_WORKERS=4

# ==================== SPELL & GRAMMAR ====================
SPELL_GRAMMAR_LOG_LEVEL=INFO

# ==================== PDF CONVERTER ====================
PDF_CONVERTER_LOG_LEVEL=INFO

# ==================== NODE SERVER ====================
NODE_ENV=production
JWT_SECRET=change-this-in-production-with-a-strong-secret-key
JWT_EXPIRE=24h
CORS_ORIGIN=http://localhost:3000

# ==================== FRONTEND ====================
NEXT_PUBLIC_API_BASE=http://localhost:4000
NEXT_PUBLIC_TUS_ENDPOINT=http://localhost:4001/files
