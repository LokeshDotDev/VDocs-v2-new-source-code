# ==================== DATABASE ====================
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=wedocs
DB_PORT=5432

# ==================== MINIO ====================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET=wedocs
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# ==================== HUMANIZER ====================
HUMANIZER_LOG_LEVEL=INFO
HUMANIZER_P_SYN_HIGH=0.50
HUMANIZER_P_TRANS_HIGH=0.28
HUMANIZER_P_SYN_LOW=0.30
HUMANIZER_P_TRANS_LOW=0.16
HUMANIZER_MAX_LEN_DELTA=0.40
HUMANIZER_SIMILARITY_MAX=0.55
HUMANIZER_ATTEMPTS=14

# ==================== REDUCTOR ====================
REDUCTOR_LOG_LEVEL=INFO
REDUCTOR_MAX_WORKERS=4

# ==================== SPELL & GRAMMAR ====================
SPELL_GRAMMAR_LOG_LEVEL=INFO

# ==================== PDF CONVERTER ====================
PDF_CONVERTER_LOG_LEVEL=INFO

# ==================== NODE SERVER ====================
NODE_ENV=production
JWT_SECRET=change-this-in-production-with-a-strong-secret-key
